@using IdentityApp.ViewModels;
@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
}
<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">

</div>
 
<form asp-controller="Auth" asp-action="SignIn" method="post">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input type="email" class="form-control"asp-for="Email" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" class="form-control"asp-for="Password">
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" asp-for=RememberMe for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>